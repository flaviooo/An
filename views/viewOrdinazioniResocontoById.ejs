<% include partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="mt-5">Lista Ordini</h1>
            <p class="lead">Complete list</p>
            <form class="add-scheda-form" action="" method="post" enctype="multipart/form-data">
                <div class="table-wrapper">
                    <% if (ordine.length > 0) {%>
                    <table id="ordineResocontoTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead class="thead-dark">
                            <tr>
                                <th data-field="tipo" data-filter-control="select"></th>
                                <th scope="col">Articolo</th>
                                <th scope="col">Descrizione</th>
                                <th scope="col">Fornitore</th>
                                <th scope="col">Tot</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% ordine.forEach((ordine, index) => {  
                                ordine.image="DSC_0138.JPG"; %>
                            <tr>
                                <td><img src="/assets/img/<%= ordine.image %>" class="rounded-circle scheda-img" alt="">
                                </td>
                                <td><%= ordine.tipo %></td>
                                <td><%= ordine.articolo %></td>
                                <td><%= ordine.ragionesociale %></td>
                                <td><%= ordine.totDettaglio %></td>
                                <td>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                        <tfoot>
                            <tr>
                                    <th data-field="tipo" data-filter-control="select"></th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col"  style="text-align:right">Total:</th>
                                    <th scope="col"></th>
                     
                            </tr>
                        </tfoot>
                    </table>
                    <table id="ordineResocontoTable2" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th data-field="tipo" data-filter-control="select"></th>
                                    <th scope="col">Articolo</th>
                                    <th scope="col">Descrizione</th>
                                    <th scope="col">Fornitore</th>
                                    <th scope="col">Tot</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% ordine.forEach((ordine, index) => {  
                                    ordine.image="DSC_0138.JPG"; %>
                                <tr>
                                    <td><img src="/assets/img/<%= ordine.image %>" class="rounded-circle scheda-img" alt="">
                                    </td>
                                    <td><%= ordine.tipo %></td>
                                    <td><%= ordine.articolo %></td>
                                    <td><%= ordine.ragionesociale %></td>
                                    <td><%= ordine.totDettaglio %></td>
                                    <td>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                            <tfoot>
                                <tr>
                                        <th data-field="tipo" data-filter-control="select"></th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                        <th scope="col"  style="text-align:right">Total:</th>
                                        <th scope="col"></th>
                         
                                </tr>
                            </tfoot>
                        </table>
                    <button type="submit" class="btn btn-success float-right">Update Scheda</button>
                    </br>
                    <% } else { %>
                    <p class="text-center">No ordine found. Go <a href="/add">here</a> to add ordine.</p>
                    <% } %>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>