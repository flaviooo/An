<% include partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="mt-5">Lista Ordini</h1>
            <p class="lead">Complete list</p>
            <div class="tabs">
                    <div class="tab-button-outer">
                      <ul id="tab-button">
                        <li><a href="#tab01">Tab 1</a></li>
                        <li><a href="#tab02">Tab 2</a></li>
                      </ul>
                    </div>
                    <div class="tab-select-outer">
                      <select id="tab-select">
                        <option value="#ordineResocontoTable">Tab 1</option>
                        <option value="#ordineResocontoTable2">Tab 2</option>
                      </select>
                    </div>
                    <div id="tab01" class="tab-contents">
                            <h2>Tab 1</h2>
                            <div class="table-wrapper">
                                    <% if (ordine.length > 0) {
                                        
                                        %>
                                    <table id="ordineResocontoTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th data-field="tipo" data-filter-control="select"></th>
                                                <th scope="col">Articolo</th>
                                                <th scope="col">Descrizione</th>
                                                <th scope="col">Fornitore</th>
                                                <th scope="col">Tot</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% ordine.forEach((ordine, index) => {  
                                                ordine.image="DSC_0138.JPG"; %>
                                            <tr>
                                                <td><img src="/assets/img/<%= ordine.image %>" class="rounded-circle scheda-img" alt="">
                                                </td>
                                                <td><%= ordine.tipo %></td>
                                                <td><%= ordine.articolo %></td>
                                                <td><%= ordine.ragionesociale %></td>
                                                <td><%= ordine.totDettaglio %></td>
                                                <td>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                    <th data-field="tipo" data-filter-control="select"></th>
                                                    <th scope="col"></th>
                                                    <th scope="col"></th>
                                                    <th scope="col"></th>
                                                    <th scope="col"  style="text-align:right">Total:</th>
                                                    <th scope="col"></th>
                                     
                                            </tr>
                                        </tfoot>
										 <% } %>
                                    </table>
                                </div>
                    </div>
                    <div id="tab02" class="tab-contents">
                        <h2>Tab 2</h>
                                <table id="ordineResocontoTable2" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th data-field="tipo" data-filter-control="select"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td>
                                            </td>
                                        </tr>
                                 </tbody>
                                    <tfoot>
                                        <tr>
                                                <th data-field="tipo" data-filter-control="select"></th>
                                                <th scope="col"></th>
                                                <th scope="col"></th>
                                                <th scope="col"></th>
                                                <th scope="col"  style="text-align:right">Total:</th>
                                                <th scope="col"></th>
                                 
                                        </tr>
                                    </tfoot>
                                </table>
                            
                    </div>                            
            </div> <!--tabs-->
        </div>
    </div>
</div>
</body>
</html>