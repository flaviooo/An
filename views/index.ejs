<% include partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="mt-5">Lista Articoli</h1>
            <p class="lead">Complete list - Home</p>
            <div class="table-wrapper">
                <% if (articoli.length > 0) {%>
                <table id="schedaTable" class="table table-hovered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Image</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Position</th>
                            <th scope="col">Number</th>

                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% articoli.forEach((player, index) => {  
                        player.image="DSC_0138.JPG"; %>

                        <tr>
                            <th scope="row"><%= player.idarticolo %></th>
                            <td><img src="/assets/img/<%= player.image %>" class="rounded-circle scheda-img" alt="">
                            </td>
                            <td><%= player.articolo %></td>
                            <td><%= player.ksfornitore %></td>
                            <td><%= player.ragionesociale %></td>
                            <td><%= player.prezzounitario %></td>
                            <td>
                                <a href="/edit/<%= player.idarticolo %>" target="_blank" rel="noopener"
                                    class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= player.idarticolo %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                <p class="text-center">No articoli found. Go <a href="/add">here</a> to add articoli.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>
</body>

</html>